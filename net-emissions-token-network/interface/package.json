{
  "name": "@project/monorepo",
  "version": "1.0.0",
  "keywords": [
    "ethereum",
    "react",
    "workspaces",
    "yarn"
  ],
  "private": true,
  "scripts": {
    "preci": "rm -fr node_modules",
    "ci": "yarn install --frozen-lockfile --ignore-engines --ignore-scripts",
    "react-app:build": "yarn workspace @project/react-app build",
    "react-app:eject": "yarn workspace @project/react-app eject",
    "react-app:ipfs": "yarn workspace @project/react-app ipfs",
    "react-app:start": "yarn workspace @project/react-app start",
    "react-app:test": "yarn workspace @project/react-app test",
    "localdev": "BROWSER=none WDS_SOCKET_PORT=443 yarn workspace @project/react-app start"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "type": "module",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "typescript": "^4.6.4"
  }
}
